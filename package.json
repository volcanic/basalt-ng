{
  "name": "basalt",
  "version": "0.30.0",
  "license": "AGPL",
  "homepage": "https://github.com/florianschwanz/basalt-ng",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start-aot-de": "npm run start --aot --locale de --i18n-file src/locale/messages.de.xlf --i18n-format xlf",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "ng test",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "i18n": "ng-xi18n --i18nFormat=xlf -p src/tsconfig.json",
    "build-aot": "ng build --aot",
    "build-aot-de": "npm run build-aot --locale de --i18n-file src/locale/messages.de.xlf --i18n-format xlf",
    "precache": "sw-precache --verbose --config=sw-precache-config.js",
    "static-serve": "cd dist && live-server --port=4200 --host=localhost --entry-file=/index.html",
    "progressive-build": "ng build && npm run precache",
    "progressive-build-prod": "ng build --prod && npm run precache",
    "progressive-start": "npm run progressive-build-prod && npm run static-serve",
    "electron-build": "ng build && cd ./src/electron && copyfiles ./* ./../../dist/",
    "electron-build-prod": "ng build --prod && cd ./src/electron && copyfiles ./* ./../../dist/",
    "electron-start": "npm run electron-build && electron ./dist/.",
    "electron-linux": "npm run electron-build && electron-packager ./dist %npm_package_name% --icon=src/favicon.ico --platform=linux --out=out --prune=true --overwrite",
    "electron-linux-prod": "npm run electron-build-prod && electron-packager ./dist %npm_package_name% --icon=src/favicon.ico --platform=linux --out=out --prune=true --overwrite",
    "electron-macos": "npm run electron-build && electron-packager ./dist %npm_package_name% --icon=src/favicon.ico --platform=darwin --out=out --overwrite",
    "electron-macos-prod": "npm run electron-build-prod && electron-packager ./dist %npm_package_name% --icon=src/favicon.ico --platform=darwin --out=out --overwrite",
    "electron-windows": "npm run electron-build && electron-packager ./dist %npm_package_name% --icon=src/favicon.ico --platform=win32 --out=out --overwrite",
    "electron-windows-prod": "npm run electron-build-prod && electron-packager ./dist %npm_package_name% --icon=src/favicon.ico --platform=win32 --out=out --overwrite",
    "cordova-clean": "cd ./cordova && cordova clean",
    "cordova-android-prepare": "cd ./cordova && cordova platform remove android && cordova platform add android",
    "cordova-android": "cd ./cordova && cordova build android --debug",
    "cordova-android-prod": "cd ./cordova && cordova build android --release",
    "cordova-android-start": "npm run cordova-android && cd ./cordova && cordova emulate android",
    "release-web": "mkdirp ./release && ng build --prod && cd dist && bestzip ./../release/%npm_package_name%-web-%npm_package_version%.zip  ./*",
    "release-progressive": "mkdirp ./release && npm run progressive-build-prod && cd dist && bestzip ./../release/%npm_package_name%-progressive-%npm_package_version%.zip  ./*",
    "release-linux": "mkdirp ./release && npm run electron-linux-prod && cd ./out && bestzip ./../release/%npm_package_name%-linux-x64-%npm_package_version%.zip ./%npm_package_name%-linux-x64/*",
    "release-macos": "mkdirp ./release && npm run electron-macos-prod && cd ./out && bestzip ./../release/%npm_package_name%-macos-x64-%npm_package_version%.zip ./%npm_package_name%-darwin-x64/*",
    "release-windows": "mkdirp ./release && npm run electron-windows-prod && cd ./out && bestzip ./../release/%npm_package_name%-win32-x64-%npm_package_version%.zip ./%npm_package_name%-win32-x64/*",
    "release-android": "mkdirp ./release && npm run cordova-android-prod && cd ./cordova/platforms/android/build/outputs/apk && bestzip ./../../../../../../release/%npm_package_name%-android-%npm_package_version%.zip ./android-release-unsigned.apk",
    "release-notes": "mkdirp ./release && markdown ./doc/release-notes-%npm_package_version%.md > release/release-notes-%npm_package_version%.html",
    "gh-pages": "ng build --output-path docs --base-href https://florianschwanz.github.io/basalt-ng/",
    "git-tags": "echo { \"tags\": [ > tags.json && git tag --format=\"{ \\\"annotation\\\":\\\"%(refname)\\\", \\\"message\\\": \\\"%(subject)\\\"} ,\" >> tags.json && replace ,\\n$ \"\" tags.json && echo ]} >> tags.json",
    "compodoc": "compodoc -p tsconfig.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/cdk": "^6.2.0",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/material": "^6.2.0",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/platform-server": "^6.0.3",
    "@angular/router": "^6.0.3",
    "@ecodev/fab-speed-dial": "^2.0.0",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "highlight.js": "^9.13.1",
    "immediate": "^3.2.3",
    "intersection-observer": "^0.5.0",
    "lie": "^3.3.0",
    "markdown-it": "^8.4.2",
    "ng-in-viewport": "^6.0.2",
    "ng2-file-upload": "^1.2.1",
    "node-sass": "^4.9.0",
    "pouchdb": "^6.4.0",
    "pouchdb-find": "^7.0.0",
    "pouchdb-upsert": "^2.2.0",
    "rxjs": "^6.0.0",
    "rxjs-compat": "^6.2.0",
    "ts-helpers": "^1.1.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.8",
    "@angular/cli": "~6.0.7",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@compodoc/compodoc": "^1.1.3",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "bestzip": "^1.1.4",
    "codelyzer": "~4.2.1",
    "copyfiles": "^2.0.0",
    "cordova": "^8.0.0",
    "electron": "^2.0.2",
    "electron-packager": "^12.1.0",
    "git": "^0.1.5",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "live-server": "^1.2.0",
    "markdown-to-html": "0.0.13",
    "mkdirp": "^0.5.1",
    "protractor": "~5.3.0",
    "replace": "^1.0.0",
    "sw-precache": "^5.2.1",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
